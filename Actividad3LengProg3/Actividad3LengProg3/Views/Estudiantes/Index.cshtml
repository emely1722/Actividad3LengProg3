@model EstudianteViewModel

<h1>Registro de Estudiantes</h1>

@if (TempData["Mensaje"] != null)
{
	<div class="alert alert-success">@TempData["Mensaje"]</div>
}

<form asp-action="Registrar" method="post">
	<div>
		<label asp-for="nombre_estudiante"></label>
		<input asp-for="nombre_estudiante" class="form-control" />
		<span asp-validation-for="nombre_estudiante" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="matricula_estudiante"></label>
		<input asp-for="matricula_estudiante" class="form-control" />
		<span asp-validation-for="matricula_estudiante" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="carrera_estudiante"></label>
		<select asp-for="carrera_estudiante" asp-items="Model.carreras" class="form-control"></select>
		<span asp-validation-for="carrera_estudiante" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="correo_estudiante"></label>
		<input asp-for="correo_estudiante" class="form-control" />
		<span asp-validation-for="correo_estudiante" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="telefono_estudiante"></label>
		<input asp-for="telefono_estudiante" class="form-control" />
		<span asp-validation-for="telefono_estudiante" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="fecha_nacimiento"></label>
		<input asp-for="fecha_nacimiento" type="date" class="form-control" />
		<span asp-validation-for="fecha_nacimiento" class="text-danger"></span>
	</div>
	<div class="row">
		<div class="col-6">
			<br />
			<button type="submit" class="btn btn-primary" size="30px">Registrar</button>
		</div>
	</div>


</form>