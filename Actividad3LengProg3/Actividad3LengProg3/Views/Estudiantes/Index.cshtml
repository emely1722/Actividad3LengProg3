@model EstudianteViewModel

<h2>
    Registro de Usuario
</h2>

@if (TempData["Mensaje"] != null)

{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<form asp-action="Registrar" method="post">
    <div>
        <label asp-for="nombre_estudiante"></label>
        <input asp-for="nombre_estudiante" class="form-control" />
        <span asp-asp-validation-for="nombre_estudiante" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="matricula_estudiante"></label>
        <input asp-for="matricula_estudiante" class="form-control" />
        <span asp-asp-validation-for="matricula_estudiante" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="carrera_estudiante"></label>
        <input asp-for="carrera_estudiante" class="form-control" />
        <span asp-asp-validation-for="carrera_estudiante" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="correo_estudiante"></label>
        <input asp-for="correo_estudiante" class="form-control" />
        <span asp-asp-validation-for="correo_estudiante" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-6">
            <br />
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a href="/Estudiante/Lista" class="btn btn-secondary"> Ir a la lista </a>
        </div>
    </div>
</form>