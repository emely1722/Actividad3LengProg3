@{
}

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">@TempData["MensajeError"]</div>
}

<h4>
    Lista de Usuario
</h4>

<div class="row">
    <div class="col-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre completo del estudiante</th>
                    <th>Matrícula</th>
                    <th>Carrera</th>
                    <th>Correo Institucional</th>
                    <th>Teléfono</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Género</th>
                    <th>Turno</th>
                    <th>Tipo de Ingreso</th>
                    <th>¿Tienes beca?</th>
                    <th>Agregue su porcentaje de beca</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var it in Model)
                    {
                        <tr>
                            <td>@it.Nombre completo del estudiante</td>
                            <td>@it.Matrícula</td>
                            <td>@it.Carrera</td>
                            <td>@it.Correo Institucional</td>
                            <td>@it.Teléfono</td>
                            <td>@it.Fecha de nacimiento</td>
                            <td>@it.Género</td>
                            <td>@it.Turno</td>
                            <td>@it.Tipo de Ingreso</td>
                            <td>@it.¿Tienes beca?</td>
                            <td>@it.Agregue su porcentaje de beca</td>
                            <td><a href="/Estudiantes/Editar/@it.nombre_usuario" class="btn btn-secondary">Editar</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>